<div>
  <ul class='dont-forget'>
    {{#each reminders}}
      <li class='dont-forget-list-item' data-reminder-id='{{id}}' data-user-id='{{userId}}'>
        <input type='checkbox' name='{{id}}.isDone' id='{{id}}.isDone' title='{{localize "DONT-FORGET.mark-done"}}' class='dont-forget-checkbox' data-dtype='Boolean' {{checked isDone}} />

        <input type='text' value='{{label}}' name='{{id}}.label' id='{{id}}.label' data-dtype='String' class='dont-forget-input' title='{{getUserName this.userId}}' readonly />

        <button type='button' title='{{localize "DONT-FORGET.edit-reminder"}}' data-action='edit' class='dont-forget-edit'>
          <i class='fas fa-edit'></i>
        </button>

        <button type='button' title='{{localize "DONT-FORGET.delete-reminder"}}' data-action='delete' class='dont-forget-delete'>
          <i class='fas fa-trash'></i>
        </button>
      </li>
    {{/each}}
  </ul>
  <div class='dont-forget-buttons'>
    <button type='button' data-action='delete-completed' class='dont-forget-delete-completed'>
      <i class='fas fa-trash'></i>
      {{localize 'DONT-FORGET.delete-completed'}}
    </button>

    <button type='button' data-action='create' class='dont-forget-create'>
      <i class='fas fa-plus'></i>{{localize 'DONT-FORGET.add-reminder'}}
    </button>
  </div>
</div>